<%-include('./header') %>

<div id="index-form" class="form-part updatePart">
    <div class="form-containor">
      <div class="form-header">
        <h2>Update Project</h2>
      </div>
      <div class="form-inner">
        <form action="/project/api/update" method="post">
          <input type="hidden" name="id" value="<%=Project._id%>">
          <input type="hidden" name="issu" value="<%=Project.issu%>">
          <div class="input_list">
            <label for="title">Title</label>
            <input type="text" name="title" placeholder="<%=Project.name%>" value="<%=Project.name%>" required>
          </div>
          <div class="input_list">
            <label for="Author">Author</label>
            <input type="text" name="author" placeholder="<%=Project.author%>" value="<%=Project.author%>" required>
          </div>
          <div class="input_list">
            <label for="Description">Description</label>
            <textarea name="description" id="description" value="<%=Project.description%>" required placeholder="<%=Project.description%>"></textarea>
          </div>
          <div class="input_list">
            <label for="labels">select option</label>
            <select name="labels" value="<%=Project.labels%>" id="dropdown" required>
              <option value="">Select Labels</option>
              <option value="UI">UI</option>
              <option value="Bug">Bug</option>
              <option value="Development">Development</option>
              <option value="Backend">Backend</option>
              <option value="FrontEnd">FrontEnd</option>
              <option value="Database">Database</option>
              </select>
          </div>
          <div class="input_list">
            <input type="submit" value="submit">
          </div>
        </form>
      </div>
    </div>
  </div>